{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "components.d.ts",
    "auto-imports.d.ts",
    "typed-router.d.ts",
    "shims.d.ts",
    "themes/**/*"
  ],
  "exclude": ["src/**/__tests__/*", "**/node_modules/**", "**/dist/**"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["src/*"],
      "~~/*": ["*"]
    },
    "moduleResolution": "node",
    "types": ["vite-plugin-vue-layouts/client"],
    "allowJs": true,
    "strict": false
  }
}
